    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/single-spa-react": "^2.12.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
