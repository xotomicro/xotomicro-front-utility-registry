{
    "compileOnSave": true,
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "esnext",
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "baseUrl": "./",
        "types": ["jest", "node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}
