{
  "packages": ["packages/web/*", "packages/system/*", "registries/*"],
  "useWorkspaces": true,
  "nohoist": ["**"],
  "ignoreChanges": ["**/__tests__/**", "**/*.md"],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", ""],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}