{
    "name": "xotomicro-frontend",
    "version": "1.0.0",
    "description": "",
    "license": "ISC",
    "private": true,
    "workspaces": {
        "nohoist": [
            "**"
        ],
        "packages": [
            "packages/web/webevent",
            "packages/web/weborder",
            "packages/web/webproduct",
            "packages/web/webauth",
            "packages/web/webuser",
            "packages/design/designsystem",
            "packages/design/designui",
            "packages/utility/utilities",
            "packages/root/rootshell"
        ]
    },
    "resolutions": {
        "webpack": "5.9.0"
    },
    "scripts": {
        "boot": "yarn clean && yarn initialize",
        "clean": "lerna clean --yes && lerna exec -- rm -rf build",
        "build": "lerna run build --stream",
        "initialize": "yarn install --legacy-peer-deps",
        "sync:link": "yarn workspace designui run sync:link && yarn workspace environment run sync:link && lerna run sync:link --stream --scope={webauth,webevent,weborder,webproduct,webuser,rootshell,designsystem}",
        "start": "lerna exec yarn start --parallel",
        "start:app": "lerna run start --stream --scope={webauth,webevent,weborder,webproduct,webuser}",
        "start:root": "lerna run start --stream --scope={rootshell,designsystem}",
        "start:rootshell": "lerna run start --stream --scope=rootshell",
        "start:designsystem": "lerna run start --stream --scope=designsystem",
        "start:webevent": "lerna run start --stream --scope=webevent",
        "start:weborder": "lerna run start --stream --scope=weborder",
        "start:webauth": "lerna run start --stream --scope=webauth",
        "start:webproduct": "lerna run start --stream --scope=webproduct",
        "start:webuser": "lerna run start --stream --scope=webuser",
        "format:prettify": "sh utilities/scripts/prettify/Prettify.sh",
        "lint:es": "sh utilities/scripts/lintify/Lintify.sh",
        "lint:style": "sh utilities/scripts/stylify/Stylify.sh",
        "test:all": "lerna run test --stream --since",
        "test:e2e": "lerna run test:e2e --stream --since",
        "test:coverage": "lerna run test:coverage --stream --since"
    },
    "dependencies": {
        "lerna": "^4.0.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "@types/node": "^16.7.1",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^24.7.0",
        "eslint-plugin-json": "^3.1.0",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-react": "^7.28.0",
        "husky": "^7.0.2",
        "jest": "^26.6.3",
        "prettier": "^2.5.1",
        "prettier-eslint": "^13.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.20.1",
        "ts-jest": "^26.4.4",
        "typescript": "^4.3.5"
    }
}
