  "version": "0.0.102",
  "description": "userweb of the xotomicro repo pack - ðŸ“¦",
  "license": "ISC",
  "scripts": {
    "start": "webpack-cli serve --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "serve": "serve build",
    "prepare": "husky install",
    "clean": "rm -rf build",
    "format:prettify": "prettier './src/**/*' --ignore-path ./.gitignore --config ./.prettierrc.js --fix",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}' -f codeframe --ignore-path ./.eslintignore --fix --cache --cache-location 'node_modules/.cache/eslint/'",
    "lint:style": "stylelint '**/*.scss' --config ./.stylelintrc.js --cache --cache-location 'node_modules/.cache/stylelint/' --fix --custom-syntax postcss-less",
    "test:service": "jest src --passWithNoTests --maxWorkers=50%",
    "test:coverage": "jest src --passWithNoTests --maxWorkers=50% --coverage"
  },
  "lint-staged": {
    "*.(tsx|html|css)": [
      "yarn run format:prettify",
      "lerna run lint:es"
    ],
    "*.scss": [
      "yarn run lint:style"
    ]
  },
  "dependencies": {
