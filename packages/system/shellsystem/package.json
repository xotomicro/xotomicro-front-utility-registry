{
  "name": "@xotomicro/shellsystem",
  "private": true,
  "version": "0.0.107",
  "description": "shellsystem of the xotomicro repo pack - ðŸ“¦",
  "license": "ISC",
  "scripts": {
    "start": "webpack-cli serve --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "serve": "serve build",
    "clean": "rm -rf build",
    "format:prettify": "prettier './src/**/*' --ignore-path ./.gitignore --config ./.prettierrc.js --write",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}' -f codeframe --ignore-path ./.eslintignore --fix --cache --cache-location 'node_modules/.cache/eslint/'",
    "lint:style": "stylelint '**/*.scss' --config ./.stylelintrc.js --cache --cache-location 'node_modules/.cache/stylelint/' --fix --custom-syntax postcss-less",
    "test:service": "jest src --passWithNoTests --maxWorkers=50%",
    "create:repo": "sh ./node_modules/@xotomicro/utility/lib/scripts/git-util.sh serviceRepoCreate"
  },
  "lint-staged": {
    "*.(tsx|html|css)": [
      "yarn run format:prettify",
      "yarn run lint:es"
    ],
    "*.scss": [
      "yarn run lint:style"
    ]
  },
  "dependencies": {
    "@xotomicro/utility": "^0.0.107",
    "css-loader": "^6.2.0",
    "identity-obj-proxy": "^3.0.0",
    "sass": "^1.45.1",
    "sass-loader": "^12.1.0",
    "single-spa": "^5.8.2",
    "style-loader": "^3.2.1",
    "systemjs": "^6.10.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.28.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^26.6.3",
    "lint-staged": "^12.3.5",
    "postcss-less": "^6.0.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "semver": "^7.3.4",
    "serve": "^11.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1",
    "ts-loader": "^8.0.12",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.1.2",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.4.0"
  }
}
