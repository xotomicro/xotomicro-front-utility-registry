{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "volar.tsPlugin": true,
  "tslint.typeCheck": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[html]": { "editor.defaultFormatter": null },
  "eslint.validate": [
    "typescript",
    "html",
    "javascript",
    "javascriptreact",
    "vue"
  ],
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "search.exclude": {
    ".git": true,
    ".build": true,
    "**/dist": true,
    "**/Jira.csv": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/coverage": true,
    "**/node_modules": true
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.validate.enable": true,
  "typescript.check.npmIsInstalled": true,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.implementationsCodeLens.enabled": true,
  "vsintellicode.typescript.completionsEnabled": true,
  "typescript.suggest.autoImports": true,
  "atlascode.jira.todoIssues.enabled": true,

  "generalConfiguration.sortOnBeforeSave": true,
  "atlascode.jira.todoIssues.triggers": ["todo", "bug", "fixme", "issue"],
  "atlascode.jira.startWorkBranchTemplate.customTemplate": "{{{PREFIX}}}/{{{ISSUEKEY}}}/{{{summary}}}",
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
